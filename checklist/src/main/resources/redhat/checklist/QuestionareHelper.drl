package redhat.checklist;
import redhat.checklist.QandAContext;
import org.drools.core.spi.KnowledgeHelper;
import java.lang.String;
import redhat.checklist.Question;
import redhat.checklist.Answer;
function void createQuestionare(KnowledgeHelper droorsContxt , String id, String question,String type) {

    QandAContext qaContext = new  QandAContext( );
    qaContext.addQuestion( "1", "Are the building contents being taken as collateral by the borrower or related entity? Either by UCC or stated within the mortgage.", "YorN" );
    droorsContxt.insert(qaContext); 


}

function void addNextQuestion(QandAContext qContext, Answer answer) {

   java.util.List<Answer> answs = qaContext.getAnswers();    
   if(answs == null){
    answs = new java.util.ArrayList<Answer>();
   }
   answs.add(answer);
   String qId= answer.getNextQuestionId();
   String qs = answer.getNextQuestion();
   String type = answer.getNextQuestionTYpe();
   
   Question nQ = new Question(qId,qs,type,null,null,null,null,null);
   qaContext.setNextQuestion(nQ);

}


